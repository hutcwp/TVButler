<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_root"
    android:layout_width="140dp"
    android:layout_height="140dp"
    android:layout_gravity="center_horizontal|center_vertical">

    <RelativeLayout
        android:id="@+id/ly_center"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="4dp">

        <Button
            android:id="@+id/btn_menu"
            style="@style/bt_h20_w20_transfer"
            android:layout_alignParentLeft="true"
            android:background="@drawable/bg_menu" />

        <Button
            android:id="@+id/btn_close"
            style="@style/bt_h20_w20_transfer"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/icon_close" />

        <Button
            android:id="@+id/btn_back"
            style="@style/bt_h20_w20_transfer"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_back" />

        <Button
            android:id="@+id/btn_home"
            style="@style/bt_h20_w20_transfer"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_home" />


    </RelativeLayout>


    <Button
        android:id="@+id/btn_left"
        style="@style/bt_h40_w40_transfer"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_left"
        android:text="@string/left"
        android:textColor="@drawable/tv_color" />

    <Button
        android:id="@+id/btn_up"
        style="@style/bt_h40_w40_transfer"
        android:layout_above="@id/ly_center"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_up"
        android:text="@string/up"
        android:textColor="@drawable/tv_color" />


    <Button
        android:id="@+id/btn_right"
        style="@style/bt_h40_w40_transfer"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/ly_center"
        android:background="@drawable/bg_right"
        android:text="@string/right"
        android:textColor="@drawable/tv_color" />


    <Button
        android:id="@+id/btn_down"
        style="@style/bt_h40_w40_transfer"
        android:layout_below="@id/ly_center"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_down"
        android:text="@string/down"
        android:textColor="@drawable/tv_color" />


</RelativeLayout>


